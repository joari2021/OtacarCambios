<div class="container mt-3">
    <h3 class="text-primary">Tasas</h3>

    <div class="row">
        <% @rates.each do |rate| %>

        <div class="col-6 col-sm-4 col-lg-3">
            <div class="card border-success mb-3 text-center" style="max-width: 13.5rem;">
                <div class="card-header bg-transparent border-success"><%if rate.country.capitalize === "Usa"%><%=rate.country.upcase%><%else%><%=rate.country.capitalize%><%end%> </div>
                <div class="card-body text-success">
                    <h5 class="card-title"><%=rate.moneda%></h5>
                </div>
                <div class="card-footer bg-transparent border-success">
                    <div class="">

                        <!-- Button trigger modal -->
                        <a href="#" class="text-primary" data-toggle="modal" data-target="#exampleModal<%=rate.id%>">
                            <i class="far fa-eye" style="font-size:30px"></i>
                        </a>

                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal<%=rate.id%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-scrollable">
                                <div class="modal-content">

                                    <div class="modal-header">
                                        <h5 class="modal-title text-success" id="exampleModalLabel">Tasas de <%if rate.country.capitalize === "Usa"%><%=rate.country.upcase%><%else%><%=rate.country.capitalize%><%end%> para envios a:</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="card border-success mb-3 m-auto" style="max-width: 36rem;">

                                            <div class="card-header text-success text-center">
                                                <%@rate = rate%>
                                                <%= render "partials/tasas", collection: @rate %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>

                                    </div>
                                </div>
                            </div>
                        </div>

                        <a href="/rates/<%=rate.id%>/edit"><i class="fas fa-edit text-success ml-3" style="font-size:30px"></i></a>

                        <a data-confirm="Esta segur@ de eliminar esta cuenta?" rel="nofollow" data-method="delete" href="/rates/<%=rate.id%>" class="ml-3"><i class="fas fa-trash-alt text-danger" style="font-size:30px"></i></a>
                    </div>
                </div>
            </div>

        </div>
        <%end%>
    </div>
    <br>

    <%= link_to 'Registrar Tasas', new_rate_path, class:"btn btn-success mb-2" %>

</div>