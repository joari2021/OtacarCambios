<div class="small-container center-block bg-nav">
    <div class="margin-top pt-4 px-5 pb-2">
        <h2 class="text-uppercase text-info font-weight-bold">Iniciar Sesion</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
            <%= f.label :email, "correo electronico" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
            <%= f.label :password, "contraseÃ±a" %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
        <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "recuerdame" %>
        </div>
        <% end %>

        <div class="actions">
            <%= f.submit "Continuar", class:"btn btn-primary"%>
        </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>